
import java.util.Scanner;

public static void main(String[] args) {
    Scanner scanner = new Scanner(System.in);

System.out.print("Nombre del alumno: ");
String nombreAlumno = scanner.nextLine();

// Primer módulo
System.out.print("Nombre del módulo de alumno: ");
String nombreModulo1 = scanner.nextLine();
System.out.print("Nota de " + nombreAlumno + " en " + nombreModulo1 + ": ");
double nota1 = Double.parseDouble(scanner.nextLine());
String clasificacion1 = clasificarNota(nota1);
System.out.println(nombreAlumno + " en " + nombreModulo1 + " -- " + nota1 + " - " + clasificacion1);

// Segundo módulo
System.out.print("\nNombre del segundo módulo de alumno: ");
String nombreModulo2 = scanner.nextLine();
System.out.print("Nota de " + nombreAlumno + " en " + nombreModulo2 + ": ");
double nota2 = Double.parseDouble(scanner.nextLine());
String clasificacion2 = clasificarNota(nota2);
System.out.println(nombreAlumno + " en " + nombreModulo2 + " -- " + nota2 + " - " + clasificacion2);

// Tercer módulo
System.out.print("\nNombre del tercer módulo de alumno: ");
String nombreModulo3 = scanner.nextLine();
System.out.print("Nota de " + nombreAlumno + " en " + nombreModulo3 + ": ");
double nota3 = Double.parseDouble(scanner.nextLine());
String clasificacion3 = clasificarNota(nota3);
System.out.println(nombreAlumno + " en " + nombreModulo3 + " -- " + nota3 + " - " + clasificacion3);

}

import java.util.Scanner;

public class CalificacionAlumno {

    public static String clasificarNota(double nota) {
        if (nota < 5) {
            return "0-4.999 [0.5]";
        } else if (nota < 6) {
            return "aprobado";
        } else if (nota < 7) {
            return "bien";
        } else if (nota < 9) {
            return "notable";
        } else if (nota <= 10) {
            return "sobresaliente";
        } else {
            return "Nota no válida";
        }
    }

}